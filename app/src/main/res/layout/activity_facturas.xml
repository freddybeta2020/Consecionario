<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".VehiculosActivity">

    <TextView
        android:id="@+id/tvtitulo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="35dp"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:text="Venta Vehiculos" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etcodigofactura"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Codigo factura"
            android:inputType="number"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btbuscarfactura"
            android:layout_width="170dp"
            android:textSize="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Buscar" />
    </LinearLayout>



    <EditText
        android:id="@+id/etfechafactura"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:textSize="30dp"
        android:enabled="false"
        android:gravity="center"
        android:hint="Digite fecha factura"
        android:ems="10"
        android:inputType="date" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etidcliente"
            android:layout_width="200dp"
            android:textSize="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="ConsultarCLiente"
            android:hint="ID cliente"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/btcliente"
            android:layout_width="170dp"
            android:textSize="30dp"
            android:onClick="ConsultarCLiente"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cliente" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvnombre"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_weight="1"
            android:text="Nombre" />

        <TextView
            android:id="@+id/tvtelefono"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Telefono" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etplacavehiculo"
            android:layout_width="200dp"
            android:textSize="30dp"
            android:gravity="center"
            android:hint="Placa vehiculo"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text" />

        <Button
            android:id="@+id/btvehiculo"
            android:layout_width="170dp"
            android:textSize="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ConsultarPlaca"
            android:text="Vehiculo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvmarca"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_weight="1"
            android:text="Marca" />

        <TextView
            android:id="@+id/tvvalor"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Valor" />


    </LinearLayout>

    <CheckBox
        android:id="@+id/cbactivo"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:enabled="false"
        android:layout_marginTop="5dp"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:text=" Activo" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btadicionar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:enabled="false"
            android:textSize="30dp"
            android:text="Adicionar" />

        <Button
            android:id="@+id/btanular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"

            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Anular" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btlimpiarcampos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="LimpiarCampos"
            android:enabled="true"
            android:textSize="30dp"
            android:text="Limpiar" />

        <Button
            android:id="@+id/btregresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:onClick="Regresar"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Regresar" />
    </LinearLayout>


</LinearLayout>